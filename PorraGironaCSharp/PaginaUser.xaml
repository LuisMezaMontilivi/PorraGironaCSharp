<Window x:Class="PorraGironaCSharp.PaginaUser"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="VistaUSR1" Height="450" Width="800"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
		>

    <Border
        Background="Wheat"
        CornerRadius= "20">
        <Grid>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="200"/>

                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--<TextBlock Text="User"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Margin="20,0,0,0"/>-->

            <Border Grid.ColumnSpan="2"
                    Background="#252525">
            </Border>

            <Grid HorizontalAlignment="Left" >
                <Label Content="Usuari"
                       Foreground="White"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>


            </Grid>
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal"
                            Grid.Column="2">

                <Button Width="37" Height="37" Margin="0, 0, 0, 0"
                       
                        Foreground="Wheat"
                        Background="Transparent"
                        FontWeight="Bold"
                        FontSize="19"
                        BorderThickness="0" 
                        x:Name="ButtonMinimitzar"
                        Click="ButtonMinimizar_Click"
                        >
                        <iconPacks:PackIconMaterial Kind="WindowMinimize"  
                                             Width="20"
                                            Height="23"
                                            VerticalAlignment="Center"
                                            Foreground="White"/>

                </Button>
                <Button Width="37" Margin="0,0,0,2"
                     
                        Foreground="Wheat"
                        Background="Transparent"
                        FontWeight="Bold"
                        FontSize="25"
                        BorderThickness="0"
                        x:Name="ButtonMaximizar" 
                        Click="ButtonMaximizar_Click"
                        >
                    <iconPacks:PackIconMaterial Kind="WindowMaximize"  
                                            Width="20"
                                            Height="23"
                                            VerticalAlignment="Center"
                                            Foreground="White"/>
                    
                </Button>
                
                <Button Width="37" Height="37" 
                        
                        Foreground="Wheat"
                        Background="Transparent"
                        FontWeight="Bold"
                        FontSize="19"
                        BorderThickness="0" 
                        x:Name="ButtonCerrar"
                        Click="ButtonCerrar_Click">
                        
                    <iconPacks:PackIconMaterial Kind="Close"
                                            Width="20"
                                            Height="23"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            />

                </Button>

            </StackPanel>



        </Grid>
    </Border>


</Window>
